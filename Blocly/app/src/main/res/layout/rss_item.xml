<?xml version="1.0" encoding="utf-8"?>
    <!-- RelativeLayout differs from LinearLayout by allowing its children to set boundary alignments.
    Children may align to the left, right, bottom or top of any sibling View or the RelativeLayout itself. -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">
    <!-- DP is short for density-independent pixels, these DP units are later converted to physical
    pixels once the application takes the display's pixel density into account.-->

<TextView
    android:id="@+id/tv_rss_item_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="New York Attacked By Giant Squid"
    android:textSize="18sp"
    android:textColor="@color/text_primary"/>

<TextView
    android:id="@+id/tv_rss_item_feed_title"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    android:layout_below="@+id/tv_rss_item_title"

    android:layout_marginTop="8dp"
    android:text="New York Times"

    android:singleLine="true"
    android:textSize="14sp"
    android:textColor="@color/text_secondary"/>
<!-- singleLine. Single line forces the TextView to display all of its content on a single line.
Therefore, when its text overflows it will not wrap to a brand new line. This too, is an aesthetic choice meant to maintain consistency between individual RSS items.-->
<TextView
    android:id="@+id/tv_rss_item_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_below="@+id/tv_rss_item_feed_title"
    android:text="A giant squid appeared abruptly today in lower Manhattan. The squid appeared peaceful at first but violence quickly escalated after a tourist attempted to have their photo taken with the \'big city octopus\'."
    android:layout_marginTop="8dp"
    android:textSize="14sp"
    android:textColor="@color/text_primary"/>

    </RelativeLayout>